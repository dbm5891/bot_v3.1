# Application Environment
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/tradingbot

# External API Keys (uncomment and configure as needed)
# POLYGON_API_KEY=your_polygon_api_key_here
# ALPACA_API_KEY=your_alpaca_api_key_here
# ALPACA_SECRET_KEY=your_alpaca_secret_key_here
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Trading Configuration
DEFAULT_INITIAL_CAPITAL=10000
DEFAULT_COMMISSION=0.01
DEFAULT_POSITION_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=api_server.log
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=5

# Security (add if implementing authentication)
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# Data Storage Paths
BACKTEST_OUTPUT_DIR=./backtesting/outputs
CSV_INPUT_DIR=./backtesting/csv_input
LOGS_DIR=./logs

# Performance Settings
BACKTEST_TIMEOUT=300
MAX_CONCURRENT_BACKTESTS=5