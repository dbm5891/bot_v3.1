# Development Environment
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings (allow all origins in development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# Trading Configuration
DEFAULT_INITIAL_CAPITAL=10000
DEFAULT_COMMISSION=0.01
DEFAULT_POSITION_SIZE=1000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=api_server.log
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=5

# Data Storage Paths
BACKTEST_OUTPUT_DIR=./backtesting/outputs
CSV_INPUT_DIR=./backtesting/csv_input
LOGS_DIR=./logs

# Performance Settings
BACKTEST_TIMEOUT=300
MAX_CONCURRENT_BACKTESTS=3

# Development specific settings
DEBUG=true
RELOAD_ON_CHANGE=true